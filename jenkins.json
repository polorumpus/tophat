{
    "variables": {
        "ami_name": "",
        "vpc_id": "",
        "subnet_id": "",
        "sg_id": "",
        "git_repo": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "associate_public_ip_address": true,
            "region": "us-east-1",
            "source_ami": "ami-60b6c60a",
            "instance_type": "m4.large",
            "ssh_username": "ec2-user",
            "ami_name": "{{user `ami_name`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "vpc_id": "{{user `vpc_id`}}",
            "security_group_id": "{{user `sg_id`}}"
        }
    ],
    "provisioners": [
        {
            "type": "chef-solo",
            "cookbook_paths": [
                "/tmp/berks-cookbooks"
            ],
            "run_list": [
                "jenkins-config::default"
            ],
            "json": {
                "java": {
                    "jdk_version": "7"
                },
                "project": {
                    "git": {
                        "repo": "{{user `git_repo`}}"
                    }
                },
                "jenkins": {
                    "executor": {
                        "timeout": 60
                    }
                }
            }
        }
    ]
}
